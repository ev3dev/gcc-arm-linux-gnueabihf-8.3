#!/bin/sh
# preinst script for gcc-linaro-arm-linux-gnueabihf-4.9
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
        download_file=$(tempfile)
        wget -O ${download_file} https://releases.linaro.org/14.09/components/toolchain/binaries/gcc-linaro-arm-linux-gnueabihf-4.9-2014.09_linux.tar.xz
        tar -C /usr/lib/i386-linux-gnu -xJf ${download_file}
        rm ${download_file}
    ;;

    abort-upgrade)
        rm -rf /usr/lib/i386-linux-gnu/gcc-linaro-arm-linux-gnueabihf-4.9-2014.09_linux
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
